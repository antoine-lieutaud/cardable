<div class="container">
  <h1 class="text-rouge text-center mb-5">Nouveau coupon</h1>

  <%= simple_form_for [ Voucher.new ], html: {class: "text-center"} do |i| %>
    <%#= i.input :qr_code %>
    <%= i.input :offer, collection: @offers, label:"FORMULE:", input_html: {class: "input-rounded-grey"}  %>
    <div class="container quantite">
      <div class="text-center text-white">
      <p class="font-24px">QUANTITE</p>
        <div class="d-flex justify-content-between w-75 mx-auto mt-3">
          <div class="d-flex align-items-center justify-content-center text-rouge btn-quantite">-
          </div>
          <div class="d-flex align-items-center justify-content-center">
          </div>
          <div class="d-flex align-items-center justify-content-center text-rouge btn-quantite">+
          </div>
        </div>
      </div>
    </div>
    <%= i.input :limit_use, label:"QUANTITE", wrapper_html: {class: "d-none"} %>
    <%= i.input :customer_email, label:"E-mail client", input_html: {class: "input-rounded-grey"} %>
    <%= i.submit "VALIDER", class:"btn-validation", id:"offer-submit" %>
  <% end %>
</div>