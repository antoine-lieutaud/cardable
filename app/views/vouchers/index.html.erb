<% @zone = "dashboard" %>

<div class="container">
  <h2 class="text-orange text-center mb-3 mt-2">Tous les bons cadeaux</h2>
    <%= form_tag vouchers_path, method: :get do %>
      <div class="search-container">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control search-input rounded-pill",
          placeholder: "Trouver un coupon"
        %>
        <i class="fa fa-search search-icon" aria-hidden="true"></i>
      </div>
    <% end %>
</div>   
  
<div class="list-voucher-index">
  <% @vouchers.each do |voucher| %>
    <div class= "voucher-card">
      <%= link_to "#{voucher.customer_email}", voucher_path(voucher)%>
    </div>
  <% end %>
</div>
