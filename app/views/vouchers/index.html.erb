<% @zone = "dashboard" %>

<div class="container">
  <h2 class="text-orange text-center mb-3 mt-2">Tous les bons cadeaux</h2>
    <%= form_tag vouchers_path, method: :get do %>
      <div class="search-container">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control search-input",
          placeholder: "Trouver un coupon"
        %>
        <i class="fa fa-search search-icon" aria-hidden="true"></i>
      </div>
    <% end %>
</div>

<div class="list-voucher-index">
  <% @vouchers.each do |voucher| %>
    <div class= "voucher-card">
      <%= link_to "#{voucher.customer_email}"%> <br> <%= "#{voucher.offer.name}"%> <%voucher_path(voucher)%>
    </div>
  <% end %>
</div>

<% content_for :back_link do %>
  <a href="<%= dashboard_path %>">
    <div class="btn-footer">
      <%= image_tag 'return.png',class:"btn-footer__icon" %>
    </div>
  </a>
<% end %>
