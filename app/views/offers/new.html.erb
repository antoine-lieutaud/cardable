<div class="form-container">
<h2 class="form-h1">Créer une offre</h2>

<%= simple_form_for [@restaurant, Offer.new ] do |i| %>
  <%= i.input :name, label:"Nom de la formule", placeholder: "Menu Saint-Valentin" %>
  <%= i.input :price, label:"Prix", placeholder: "00,00€"%>
  <%= i.input :description, label:"Description de l'offre", placeholder: "Décrivez l’offre ici"%>
  <%= i.input :validity, collection: [1,3,6,12,24], label:"Période de validité (mois)"%>
  <%= i.submit "CRÉER", class:"btn-block", id:"offer-submit" %>
<% end %>
</div>
