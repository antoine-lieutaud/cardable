<div class="form-container">
<h2 class="form-h1">Modifier une offre</h2>

<%= simple_form_for [@restaurant, @offer] do |i| %>
  <%= i.input :name, label:"Nom de la formule" %>
  <%= i.input :price, label:"Prix"%>
  <%= i.input :description, label:"Description de l'offre"%>
  <%= i.input :validity, collection: [1,3,6,12,24], label:"Période de validité (mois)" %>
  <%= i.submit "MODIFIER", class:"btn-block", id:"offer-submit" %>
<% end %>
</div>
