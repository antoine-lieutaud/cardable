<div class="container">
  <h1 class="text-jaune text-center mb-3">Statistiques</h1>
    <%= form_tag statistiques_path, method: :get do %>
      <div class="search-container">
        <%= text_field_tag :query,
          params[:query],
          collection: @offers,
          class: "form-control search-input rounded-pill",
          placeholder: "Trouver un coupon"
        %>
        <i class="fa fa-search search-icon" aria-hidden="true"></i>
      </div>
    <% end %>
    <% if @offer %>
      <%= @offer.name %>
    <% end %>
    
    
    <%= simple_form_for [ Voucher.new ], html: {class: "text-center"} do |i| %>
      <%= i.input :offer, collection: @offers, label:"FORMULE:", input_html: {class: "input-rounded-grey", data: { action: "change->price#changePrice"}}  %>
    <% end %>
</div>